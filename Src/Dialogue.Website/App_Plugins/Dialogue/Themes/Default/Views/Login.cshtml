@using Dialogue.Logic.Application.ExtensionMethods
@inherits UmbracoViewPage<Dialogue.Logic.Models.LogOnModel>
@{
    Layout = "OneColThin.cshtml";
}

@section PageTitle {
    @Model.PageTitle
}

@section MetaDescription
{
    @Model.MetaDesc
}

@if (Model.ShowForgotPassword)
{
    @Html.Action("ForgotPasswordForm", "DialogueLoginRegisterSurface")
}
else if (Model.ShowResetPassword)
{
    @Html.Action("ResetPasswordForm", "DialogueLoginRegisterSurface")
}
else
{
    @Html.Action("LogOnForm", "DialogueLoginRegisterSurface")
}

